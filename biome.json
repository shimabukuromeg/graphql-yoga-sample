{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": [
      "**/dist/**",
      "**/generated/**",
      "**/*.generated.*",
      "**/generated.ts",
      ".next/**",
      "node_modules/**",
      "src/gql/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/dist/**",
      "**/generated/**",
      "**/*.generated.*",
      "**/generated.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      }
    },
    "ignore": [
      "**/dist/**",
      "**/generated/**",
      "**/*.generated.*",
      "**/generated.ts"
    ]
  },
  "json": {
    "formatter": {}
  }
}
