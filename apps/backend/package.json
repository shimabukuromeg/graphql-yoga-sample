    "@vitest/ui": "^1.6.0",
    "cross-env": "7.0.3",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.4",
    "@prisma/client": "5.14.0",
