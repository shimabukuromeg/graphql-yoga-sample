  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "dev": "cross-env NODE_ENV=development ts-node-dev --exit-child --respawn src/main.ts",
    "start": "node dist/src/main.js",
    "build": "prisma generate && rm -rf ./dist && tsc && cp -r ./prisma/* ./dist/prisma",
